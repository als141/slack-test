{
    "display_information": {
        "name": "Task Request Bot",
        "description": "SlackとNotionを連携したタスク依頼管理システム",
        "background_color": "#2c2d30"
    },
    "features": {
        "bot_user": {
            "display_name": "Task Request Bot",
            "always_online": true
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "im:write",
                "users:read",
                "users:read.email",
                "commands"
            ]
        }
    },
    "settings": {
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}